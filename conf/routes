# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /               controllers.ApplicationController.index

GET     /signUp         controllers.AuthenticationController.signUp
POST    /signUp         controllers.AuthenticationController.saveUser

GET     /account        controllers.AuthenticationController.showAccountDetails

GET     /logout         controllers.AuthenticationController.logout

GET     /login          controllers.AuthenticationController.login
POST    /login          controllers.AuthenticationController.performLogin


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file   controllers.Assets.at(path="/public", file)
GET     /webjars/*file  controllers.WebJarAssets.at(file)
